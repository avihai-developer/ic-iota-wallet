<?xml version='1.0' encoding='utf-8'?>
<widget id="org.iota.community.wallet" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IC Wallet</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/icon.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/icon.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/icon.png" />
        <splash density="port-hdpi" src="res/screen/android/res-notlong-port-hdpi/default.png" />
        <splash density="port-mdpi" src="res/screen/android/res-notlong-port-mdpi/default.png" />
        <splash density="port-xhdpi" src="res/screen/android/res-notlong-port-xhdpi/default.png" />
        <splash density="port-xxhdpi" src="res/screen/android/res-notlong-port-xxhdpi/default.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/res-notlong-port-xxxhdpi/default.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/screen/ios/splash.png" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#004D40" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-compat" spec="^1.2.0" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-iota" spec="cordova-plugin-iota" />
    <plugin name="cordova-plugin-globalization" spec="^1.0.9" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="4.5.4" />
</widget>
